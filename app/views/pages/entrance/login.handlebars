<div class="view-login">

    <div class="row">

        <div class="col-lg-12">
            <div class="bs-component">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Login</li>
                </ol>
            </div>
        </div>

        <div class="col-8">
            <h1>Login</h1>
        </div>

        <div class="col-8">

            <form action='/login' method="POST">

                <div class="form-group">
                    <label for="email">e-mail</label>
                    <input type="text" class="form-control" name="email" id="email" placeholder="fulanoac@dominio.com">
                </div>

                <div class="form-group">
                    <label for="senha">Digite sua senha</label>
                    <input type="password" class="form-control" name="senha" id="senha"
                        placeholder="&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;">
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <button type="submit" id="botao_cadastrar" class="btn btn-secondary mt-4">Login</button>
                <a class="btn btn-primary mt-4" href="/">Cancelar</a>

            </form>

        </div>

    </div>
    
</div>