<div class="row">

    <div class="col-lg-12">
        <div class="bs-component">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active">Cursos</li>
            </ol>
        </div>
    </div>

    <div class="col-lg-12 mt-2">

        <div class="page-header">
            <h1 id="tables">Cursos Cadastrados <a href="/curso/create" class="btn btn-secondary btn-sm"><i
                        class="fas fa-plus-circle"></i></a></h1>
        </div>

        <div class="bs-component">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Sigla</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each cursos}}
                    <tr class="table-active">
                        <th scope="row">{{id}}</th>
                        <td>{{sigla}}</td>
                        <td>{{nome}}</td>
                        <td>
                            <a class="btn btn-secondary btn-sm" href="/curso/read/{{id}}"><i class="fas fa-eye"></i></a>
                            <a class="btn btn-warning btn-sm" href="/curso/update/{{id}}"><i
                                    class="fas fa-pencil-alt"></i></a>
                            <a class="btn btn-danger btn-sm" href="/curso/delete/{{id}}"><i
                                    class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>


</div>